
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        
        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }

        .hero-content {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .hero-title {
            font-size: 3rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        /* Main Content */
        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
        }

        .section {
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #2c3e50;
            border-bottom: 3px solid #3498db;
            padding-bottom: 0.5rem;
            display: inline-block;
        }

        .dark-mode .section-title {
            color: #e0e0e0;
        }

        /* Features Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .feature-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            border-left: 4px solid #3498db;
        }

        .feature-card:hover {
            transform: translateY(-5px);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            display: block;
        }

        .feature-title {
            font-size: 1.3rem;
            margin-bottom: 1rem;
            color: #2c3e50;
        }

        .dark-mode .feature-title {
            color: #e0e0e0;
        }

        /* Stats Section */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .stats-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-top: 4px solid #e74c3c;
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: #e74c3c;
            display: block;
        }

        .stats-label {
            font-size: 1rem;
            color: #7f8c8d;
            margin-top: 0.5rem;
        }

         .dark-mode .ststs-card {
            background: #f8f0f0;
        }

        /* Team Section */
        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .team-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        .team-card:hover{
          border-color: #667eea;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            transform: translateY(-5px);
        }

        .action-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            display: block;
        }  
        

        .dark-mode .team-card {
            background: #f8f0f0;
        }

        .team-card:hover {
            transform: translateY(-5px);
        }

        .team-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
        }

        .team-name {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .dark-mode .team-name {
            color: #e0e0e0;
        }

        .team-role {
            color: #7f8c8d;
            font-size: 0.9rem;
        }

        /* Contact Section */
        .contact-info {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-top: 2rem;
        }

        .dark-mode .contact-info {
            background: #edeaeaf2;
        }

        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            gap: 1rem;
        }

        .contact-icon {
            font-size: 1.5rem;
            color: #3498db;
            width: 30px;
        }

        
/* Global dark mode styles */
.dark-mode {
    background-color: #121212;
    color: #e0e0e0;
}

.dark-mode .hero-section {
    background: linear-gradient(135deg, #1e3c72, #2a5298);
}

.dark-mode .feature-card,
.dark-mode .stats-card,
.dark-mode .team-card,
.dark-mode .contact-info {
    background-color: #1e1e1e;
    color: #e0e0e0;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.05);
}

.dark-mode .feature-title,
.dark-mode .stats-label,
.dark-mode .team-role,
.dark-mode .contact-item span {
    color: #e0e0e0;
}

.dark-mode .stats-number {
    color: #ff6b6b;
}

.dark-mode .section-title {
    border-color: #2980b9;
}

.dark-mode .team-name {
    color: #ffffff;
}





        /* Responsive Design */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .mobile-menu {
                display: flex;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .nav-container {
                padding: 0 1rem;
            }

            .main-content {
                padding: 2rem 1rem;
            }
        }
    </style>

  
